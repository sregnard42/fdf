#include "fdf.h"

int				get_input(int keycode, void *params_)
{
	t_params *params;

	params = (t_params *)params_;
	if (keycode == KEY_ESCAPE)
	{
		mlx_clear_window(params->mlx, params->win);
		mlx_destroy_window(params->mlx, params->win);
		params_free(&params);
		exit(EXIT_SUCCESS);
	}
	return (0);
}

int				main(int ac, char **av)
{
	t_params	*params;
	void		*image;
	int			*width = NULL;
	int			*height = NULL;

	if (ac != 2)
		trigger_error(ERR_USAGE);	
	if (!(params = params_new(read_file(av[1]))))
		trigger_error(ERR_FILE);
	ft_putendl("MAP =");
	ft_print_tab(params->map);
	image = mlx_xpm_to_image(params->mlx, params->map,
			&(params->map_size->x), &(params->map_size->y));
	image = mlx_xpm_file_to_image(params->mlx, av[1], width, height);
	if (!image)
	{
		ft_putendl("Image creation failed");
		return (0);
	}
	ft_putendl("Checkpoint C");
	mlx_put_image_to_window(params->mlx, params->win, image, 0, 0);
	mlx_key_hook(params->win, &get_input, params);
	mlx_loop(params->mlx);
	return (0);
}
